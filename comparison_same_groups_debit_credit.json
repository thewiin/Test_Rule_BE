{
  "rule_id": "R004_DailyTransferBalance",
  "rule_name": "KiemTraCanBangGiaoDichChuyenKhoanHangNgay",
  "rule_type": "COMPARISON_SAME_GROUPS_STATISTICAL",
  "description": "Đảm bảo tổng tiền ghi nợ cho chuyển khoản bằng tổng tiền ghi có cho chuyển khoản mỗi ngày.",
  "target_table": "bank_data.transactions",
  "group_by_columns": ["transaction_date"],
  "group1_filter_condition": "transaction_type = 'TRANSFER_DEBIT'",
  "group1_calculation": {
    "function_keyword": "SUM",
    "target_column": "amount"
  },
  "group2_filter_condition": "transaction_type = 'TRANSFER_CREDIT'",
  "group2_calculation": {
    "function_keyword": "SUM",
    "target_column": "amount"
  },
  "comparison_operator": "="
}
